<div id="attachments">
  <% @ticket.attachments.each do |asset| %>
    <div >
        <% if asset.is_image?%>
          <a class="fancybox" rel="group" href='<%=asset.file.url%>' ><img src='<%=asset.file.url%>' height=100 width=100 alt="" /></a>
        <% elsif asset.is_video?%>
          <%= video_tag asset.file.url, size: "100x100", controls: true, autobuffer: true, poster:"video.png" %>
        <% elsif asset.is_audio?%>
          <%= audio_tag asset.file.url, controls: true %>
        <% else %>
          <%= link_to asset.file.url, asset.file.url, :target=> "_blank", :style => 'color:#0079bf; font-size: 15px; font-weight: bold', class: "glyphicon glyphicon-save"%>
        <% end %>
        <%= link_to "Download", asset.file.url(:original, false), :target=> "_blank" %>
        <%= link_to 'Delete', attachment_path(asset), method: :delete, data: { confirm: 'Are you sure?' }, :style => 'color:#0079bf; font-size: 15px; font-weight: bold', class: "glyphicon glyphicon-remove" %>
    </div><br>
  <% end %>
</div>