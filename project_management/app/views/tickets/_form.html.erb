<%= form_with(model: [ @project, @project.tickets.build ], local: true) do |form| %>
  <%# if @project.project_workers.find_by(:user_id current_user.id).role_id = 3 %>
    <%#= form.hidden_field :type, :value => "Bug"%>
  <%# else %>
    <%#= form.hidden_field :type, :value => "Task"%>
  <%# end %>
  <%= form.hidden_field :type, :value => "Task"%>
  <%= form.hidden_field :status, :value => "To do"%>
  <p>
    <%= form.label :title %><br>
    <%= form.text_area :title %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <div class="form-group">
    <%= form.label :priority %> <br />
    <%= form.label :priority, 'High' %>
    <%= form.radio_button :priority, 'high' %><br>
    <%= form.label :priority, 'Medium' %>
    <%= form.radio_button :priority, 'medium' %><br>
    <%= form.label :priority, 'Low' %>
    <%= form.radio_button :priority, 'low' %>
    <br />
  </div>

  <p>
    <%= form.label :Developer %><br>
    <%= form.select :dev_id, @project.project_workers.select{|p| p.role_id == 2}.collect {|p| [Employee.find(p.user_id).full_name, p.user_id ]}, include_blank: true %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
