<!DOCTYPE html>
<html>
  <head>
    <title>Trollo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<% if user_signed_in? %>
  <div class="wrapper">
    <nav id="sidebar">
        <ul class="list-unstyled components"> <br>
          <li>
            <%= link_to "Home", root_path,  {:style => 'color:#FFFFFF; font-size: 20px; font-weight: bold', class: "glyphicon glyphicon-home"}%>
          </li><br>
          <li>
            <%= link_to "Users", users_path, {:style => 'color:#FFFFFF; font-size: 20px; font-weight: bold', class: "glyphicon glyphicon-user"} %>
            <% if controller_name == "users" %>
              <ul class="collapse-unstyled components">
                <% if current_user.can_create_user %>
                  <li>
                    <%= link_to "Add User", new_user_path, {:style => 'color:#FFFFFF; font-size: 15px; font-weight: bold'}%>
                  </li>
                  <li>
                    <%= link_to "Users", users_path, {:style => 'color:#FFFFFF; font-size: 15px; font-weight: bold'}%>
                  </li>
                <% end %>
            </ul>
            <% end %>
          </li><br>
          <li>
            <%= link_to "Projects", projects_path, {:style => 'color:#FFFFFF; font-size: 20px; font-weight: bold', class: "glyphicon glyphicon-folder-open"} %>
            <% if controller_name == "projects" %>
              <% if action_name == "show" || action_name == "dashboard" || action_name == "edit" || action_name == "team"%>
                <li style = 'color:#FFFFFF; font-size: 17px; font-weight: bold'> <%= @project.title %></li>
                <ul class="collapse-unstyled components">
                  <li>
                    <%= link_to "Details", project_path(@project), {:style => 'color:#FFFFFF; font-size: 15px; font-weight: bold', class: "glyphicon glyphicon-tasks"} %>
                  </li>
                  <% if current_user.can_see_project_details%>
                    <li>
                      <%= link_to "Dashboard", dashboard_path(@project),  {:style => 'color:#FFFFFF; font-size: 15px; font-weight: bold', class: "glyphicon glyphicon-blackboard"}%>
                    </li>
                    <li>
                      <%= link_to "Team", team_path(@project), {:style => 'color:#FFFFFF; font-size: 15px; font-weight: bold', class: "glyphicon glyphicon-king"} %>
                    </li>
                  <% end %>
                </ul>
              <% elsif current_user.can_create_project %>
                <ul class="collapse-unstyled components">
                  <li>
                    <%= link_to "New project", new_project_path, {:style => 'color:#FFFFFF; font-size: 15px; font-weight: bold'} %><br>
                  </li>
                </ul>
              <% end %>
            <% end %>     
          </li>
        </ul>
    </nav>
  </div>
<% end %>

  <body>
    <%# if notice %>
      <!--p class = "alert alert-success"><%#= notice %></p-->
    <%# end %>
    <% if alert %>
      <p class = "alert alert-danger"><%= alert %></p>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
          $("#sidebar").mCustomScrollbar({theme: "minimal"});
          $('#sidebarCollapse').on('click', function () {
          $('#sidebar').toggleClass('active');});});
    </script>
  </body>
  
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <nav class="navbar-before navbar-expand-lg navbar-light bg-light">
        <div class="container-after">
          <button type="button" id="sidebarCollapse" style='color:#0079bf; font-size: 15px; font-weight: bold' class="glyphicon glyphicon-th-list">
            
          </button>
        </div>
      </nav>

    </div>
      <p class="navbar-text pull-right">
        <% if user_signed_in? %>
          Logged in as <strong><%= current_user.email %></strong>.
          <%= image_tag(current_user.avatar.url(:thumb), :class => "round-image-50") %>
          <%= link_to "Edit Profile", edit_user_registration_path, :class => 'navbar-link' %> 
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
        <% end %>
      </p>
      <div class="navbar-left">
        <%= Time.now.strftime("%Y-%d-%m %H:%M") %> <br>
      </div>
  </div>
</nav>
</html>
