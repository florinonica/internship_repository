<style type="text/css">
	body {background-color: white;}
</style>
<div class='board' style='overflow-y: scroll; height: 700px; width: 1700; margin: -20px -100px; margin-right: -250px; border-bottom:5px solid black'>
<% @project.posts.order('created_at DESC').each do |post| %>
  <% if post.is_owned?(current_user) %>
  <div class="card-header-2" id = "posts" style='font-color: black; border:10px solid <%= post.get_color%>; margin-left:auto;'>
  <% else %>
  	<div class="card-header-2" id = "posts" style='font-color: black; border:10px solid <%= post.get_color%>;'>
  <% end %>
	  <fieldset >
	  	<legend style="font-size: 18px; font-weight: bold">At <%= post.created_at.strftime("%d-%m-%Y %H:%M") %> <%= link_to post.user.full_name, user_path(post.user)%> wrote:</legend>
	 </fieldset>
     <%= post.body %>
     <% post.attachments.each do |asset| %>
	   <div style='display: inline-block; width: 100px; '>
	      <% if asset.is_image?%>
	        <a class="fancybox" rel="group" href='<%=asset.file.url%>' ><img src='<%=asset.file.url%>' height=100 width=100 alt="" /></a><%= link_to "Download", asset.file.url(:original, false), :target=> "_blank", :style => 'color:#0079bf; font-size: 18px; font-weight: bold'%><br>
	      <% elsif asset.is_video?%>
	        <%= video_tag asset.file.url, size: "100x100", controls: true, autobuffer: true, poster:"video.png" %>
	        <%= link_to "Download", asset.file.url(:original, false), :target=> "_blank", :style => 'color:#0079bf; font-size: 18px; font-weight: bold'%><br>
	      <% elsif asset.is_audio?%>
	        <%= audio_tag asset.file.url, width: "100", controls: true %>
	        <%= link_to "Download", asset.file.url(:original, false), :target=> "_blank", :style => 'color:#0079bf; font-size: 18px; font-weight: bold'%><br>
	      <% else %>
	        <%= link_to asset.file_file_name, asset.file.url, :target=> "_blank", :style => 'color:#0079bf; font-size: 15px; font-weight: bold', class: "glyphicon glyphicon-save"%>
	      <% end %>
      </div>
    <% end %>
  </div>
<% end %>
</div><br><br>
<%= link_to '<i class="glyphicon glyphicon-arrow-left"></i> Back'.html_safe, :back, {:style => 'color:#0079bf; font-size: 18px; font-weight: bold; font-family: "Ubuntu"'} %>


<%= link_to '<i class="glyphicon glyphicon-comment"></i> Post message'.html_safe, new_project_post_path(@project), {class: "btn btn-info collapsed", :style => ';color:white; font-size: 18px; font-weight: bold; float: right'} %>


