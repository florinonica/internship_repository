<h1>Projects</h1>

<table cellpadding=15 cellspacing=15>
  <tr>
    <th colspan="2"></th>
  </tr>

  <% current_user.get_projects.each do |project| %>
    <tr>
      <td><%= link_to project.title, dashboard_path(project) %></td>
      <% if current_user.can_edit_project %>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
      <% end %>
      <% if current_user.can_delete_project %>
        <td><%= link_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<%= link_to "Add Project", new_project_path %><br>

<%= link_to "Back", root_path %>