<h1>Projects</h1>

<% if current_user.type == "Superuser" %>
  <table cellpadding=15 cellspacing=15>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>

    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= link_to 'Show', project_path(project) %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to "Add Project", new_project_path %><br>
<% end %>

<% if current_user.type == "Client" %>
  <table cellpadding=15 cellspacing=15>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>

    <% current_user.projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= link_to 'Show', project_path(project) %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<% if current_user.type == "Employee" %>
  <table cellpadding=15 cellspacing=15>
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>

    <% current_user.projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= link_to 'Dashboard', dashboard_path(project) %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<%= link_to "Back", root_path %>