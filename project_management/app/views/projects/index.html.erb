<h2>Projects</h2>

<table cellpadding=15 cellspacing=15>
  <tr>
    <th colspan="2"></th>
  </tr>

  <% current_user.get_projects.each do |project| %>
    <tr>
      <% if current_user.can_see_project_details%>
        <td class="col-xs-5"><%= link_to project.title, dashboard_path(project), {:style => 'color:#0079bf; font-size: 20px; font-weight: bold'}%><br></td>
      <% else %>
        <td class="col-xs-5"><%= link_to project.title, project_path(project), {:style => 'color:#0079bf; font-size: 20px; font-weight: bold'}%><br></td>
      <% end %>
      <% if current_user.can_edit_project %>
        <td class="col-xs-5"><%= link_to 'Edit', edit_project_path(project), {:style => 'color:#0079bf; font-size: 15px; font-weight: bold', class: "glyphicon glyphicon-edit"}%></td>
      <% end %>
      <% if current_user.can_delete_project %>
        <td ><%= link_to 'Delete', project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, :style => 'color:#0079bf; font-size: 15px; font-weight: bold', class: "glyphicon glyphicon-remove"  %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<br>

<%= link_to "Back", root_path, {:style => 'color:#0079bf; font-size: 15px; font-weight: bold', class: "glyphicon glyphicon-arrow-left"} %>