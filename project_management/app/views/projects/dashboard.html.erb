
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script type="text/javascript">
    $(document).on('turbolinks:load', function() {
      $(function() {
        $("#tickets_search").change(function() {
          $.get($("#tickets_search").attr("action"), $("#tickets_search").serialize(), null, "script");
          return false;
        });
      });
    });
  </script>
 </head>


<div class="board-container">
  <div class="board-content" >
    <div style='text-align: left; display: flex; margin-left: 10px; padding-bottom: 0px'>
      <%= form_tag dashboard_path, :method => 'get', :id => "tickets_search", remote: true do%>
        <%= select_tag :search, options_for_select(["All", ["Bug", "1"], ["Task", "0"] ], :selected => params[:search]), style: 'color:black; font-size: 17px; font-weight: bold; font-family: "Ubuntu"; width: 100px; text-align: center' %>
      <% end %>
      <%= form_tag undo_path , method: :patch, :id=> "undo" ,:url => {:controller => :tickets, :action => :undo} do %>
        <%= submit_tag 'Undo', style: 'color:black; font-size: 15.5px; font-weight: bold; font-family: "Ubuntu"; width: 100px; text-align: center'%>
      <% end %>
    </div>
    <div class="cards-container-head">
      <div class="cards-container-title" style='color:#FFFFFF; font-size: 25px;'></div>
    </div>
    <div class="cards">
      <div  id="m" class="cards" >
        <%= render partial: "card", locals: {id: "To do", project: @project, tickets: @project.get_tasks_to_do.search(params[:search])} %>
      </div>
      <div  id="m1" class="cards">
        <%= render partial: "card", locals: {id: "In progress", tickets: @project.get_tasks_in_progress.search(params[:search])} %>
      </div>
      <div  id="m2" class="cards">
        <%= render partial: "card", locals: {id: "Dev complete", tickets: @project.get_tasks_dev_complete.search(params[:search])} %>
      </div>
      <div  id="m3" class="cards">
        <%= render partial: "card", locals: {id: "Done", tickets: @project.get_tasks_done.search(params[:search])} %> 
      </div>
    </div>
  </div>
</div><body>
</body>
      