<h1>Project Dashboard</h1>

<p>
  <strong>Title</strong>
  <%= @project.title %>
</p>

<table cellpadding=15 cellspacing=15>
  <tr>
    <th>Name</th>
    <th>Descrpition</th>
    <th colspan="2"></th>
  </tr>

  <% @project.tickets.each do |ticket| %>
    <tr>
      <td><%= ticket.title %></td>
      <td><%= ticket.description %></td>
      <td><%= link_to 'Edit', edit_project_ticket_path(ticket) %></td>
      <td><%= link_to 'Destroy', project_ticket_path(ticket), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
      <td><%#= link_to 'Assign Dev',%></td>
    </tr>
  <% end %>
</table>

<h2>Create a task:</h2>
<%= render 'tickets/form' %>

<%= link_to "Back", projects_path %>